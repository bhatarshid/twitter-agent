{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "noImplicitAny": false,
    },
    "include": ["index.ts", "src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}